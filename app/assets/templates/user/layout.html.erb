<div class="container">
    <div class="row">
    <div class="col-sm-3 dashboard-navigation">
        <h4>Login to</h4>
        <ul class="nav nav-pills nav-stacked">
            <li>Sign up for our services</li>
            <li>Manage your prescription</li>
        </ul>
    </div>
    <div class="col-sm-9">
        <div class="container">
    <div class="row">
        <div class="span12">
            <form class="form-horizontal">
              <fieldset>
                <div id="legend">
                  <legend class="">Login</legend>
                </div>

                  <!-- Username -->
        <div class="controls">
          <%= form_for @user do |f| %>
          <p><%= f.text_field :username, placeholder: "Username" %></p>
          <p><%= f.password_field :password, placeholder: "Password" %></p>
          <%= f.submit "Create" %>
          <% end %>
                  <!-- Password-->
                  <label class="control-label" for="password">Password</label>
                  <div class="controls">
                  
                  </div>
                  <!-- Button -->

              </fieldset>
            </form>
        </div>
    </div>
</div>

